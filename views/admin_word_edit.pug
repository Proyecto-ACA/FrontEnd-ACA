extends __layout
block content
  .container-fluid
    .row.flex-nowrap
      include __sidebar
      script(src='routes/home.js')
      // Navbar
      .navp.col.py-0
        include __navbar2

        .container-fluid
          br
          #container-edit
            form.form(role='form' onsubmit='return false;')
              .form-group
                .input-group.mb-2
                    span.input-group-text ID
                    input#id.form-control(type='text', placeholder='id', aria-label='id', aria-describedby='basic-addon1' readonly)
                .input-group.mb-2
                  span.input-group-text Nombre
                  input#name.form-control(type='text', placeholder='Nombre', aria-label='Nombre', aria-describedby='basic-addon1')
                .input-group.mb-2
                  span.input-group-text Descripcion
                  textarea#description.form-control(rows='4')
                .input-group.mb-2
                  span.input-group-text Categoria
                  select#category.form-select
                    option(value='1') Abecedario
                .input-group.mb-2
                  span.input-group-text URL de imagen
                  input#image.form-control(type='text', placeholder='URL de imagen', aria-label='URL de imagen', aria-describedby='basic-addon1')             
                .input-group.mb-2
                  span.input-group-text URL de Seña
                  input#sign.form-control(type='text', placeholder='URL de Seña', aria-label='URL de Seña', aria-describedby='basic-addon1')             
              .d-grid.gap-2
                button#post.btn.btn-primary(type='button') Guardar Palabra
    script(src='/services/admin_senas_edit.js')
